<div align = "right" style="padding:1%">
  <%= link_to 'Nueva venta', ventas_new_path %>
</div>
<p class="text-primary">Ventas activas</p>
<table id="example" class="table table-striped table-bordered" cellspacing="0" >
	<thead>
		<th style="text-align:center">Folio Venta</th>
      	<th style="text-align:center">Clave Cliente</th>
      	<th style="text-align:center">Nombre</th>
      	<th style="text-align:center">Total</th>
      	<th style="text-align:center">Fecha</th>
	</thead>
	<tbody>
		<% @ventas.each do |venta| %>
			<tr>
				<td style="text-align:center">
					<% #el id de la venta %>
					<%= clave_format venta[0]  %>
				</td>
				<td style="text-align:center">
					<%= clave_format venta[1] %>
				</td>
				<td style="text-align:center">
					<%= venta[2]%> <%= venta[3]%> <%= venta[4]%>
				</td>
				<td style="text-align:center">
					<%= sprintf("%.2f", venta[5])  %>
				</td>
				<td style="text-align:center">
					<%= DateTime.parse(venta[6]).strftime("%d/%m/%Y") %>
				</td>
			</tr>
		<% end %>
	</tbody>
</table>